{
	"manifest_version": 3,
	"name": "MAGI Controller",
	"version": "0.2",
	"description": "Allows MAGI to control your browser.",
	"permissions": [
		"nativeMessaging",
		"tabs",
		"tabGroups",
		"scripting",
		"storage",
		"activeTab",
		"alarms"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"background": {
		"service_worker": "dist/background.js",
		"type": "module"
	},
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png"
	}
}
