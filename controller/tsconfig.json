{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/types/shared-types"],
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "@types": ["src/types/shared-types"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
