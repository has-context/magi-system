{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./controller/types"],
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "shared/*": ["controller/shared/*"]
    }
  },
  "include": ["controller/**/*", "setup/**/*"],
  "exclude": ["node_modules", "dist"]
}
