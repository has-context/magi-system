{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "jsx": "react",
        "outDir": "./dist",
        "rootDir": "./",
        "sourceMap": true,
        "declaration": true,
        "removeComments": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./controller/node_modules/@types",
            "./common/shared-types"
        ],
        "baseUrl": "./",
        "paths": {
            "@types": ["./common/shared-types"],
            "common/*": ["common/*"]
        }
    },
    "include": [
        "magi/**/*",
        "controller/**/*",
        "browser/**/*",
        "common/**/*",
        "setup/**/*",
        "test/**/*"
    ],
    "exclude": ["controller/node_modules", "controller/dist"]
}
