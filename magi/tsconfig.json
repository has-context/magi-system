{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": false,
        "baseUrl": "./",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": false,
        "removeComments": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types", "src/types"],
        "paths": {
            "*": ["node_modules/*"],
            "@types/*": ["src/types/*"]
        }
    },
    "include": ["src/**/*", "../ensemble/**/*"],
    "exclude": ["node_modules", "dist"]
}
